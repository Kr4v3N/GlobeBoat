{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Email</th>
            </tr>
            </thead>

            <tbody>

            {% for user in users %}

                <tr>
                    <td>{{user.id}}</td>
                    <td><img src="{{user.picture}}" alt="" class="avatar avatar-micro"></td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td>{{user.email}}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>

                    </td>
                    <td>
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>

                    </td>
                </tr>

            {% endfor %}

            </tbody>

        </table>

    </div>

{% endblock %}
